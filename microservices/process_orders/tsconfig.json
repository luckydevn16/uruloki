{
    "compilerOptions": {
        "lib": ["es2021", "dom"],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "types": ["node"],
        "typeRoots": ["./src/@types/*", "./node_modules/@types"]
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/**/*"]
}
